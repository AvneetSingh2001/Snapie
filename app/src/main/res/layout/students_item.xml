<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/student_itemid"
    android:layout_height="66dp">

    <ImageView
        android:id="@+id/student_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/student_image"
        app:layout_constraintStart_toEndOf="@+id/student_image"
        app:layout_constraintTop_toTopOf="@+id/student_image">

        <TextView
            android:id="@+id/student_name"
            android:layout_width="wrap_content"
            android:fontFamily="@font/googlesans_medium"
            android:textSize="14sp"
            android:textColor="@color/darkMainColor"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/student_descp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/googlesans_regular"
            android:textSize="14sp"
            android:textColor="@color/greyText"
            android:text="Hey ðŸ‘‹ There I am using Snappy" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>